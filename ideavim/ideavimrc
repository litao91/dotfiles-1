set clipboard+=unnamed

set surround

let mapleader = " "
map <leader>vc :source ~/.ideavimrc<CR>
map <leader>ve :edit ~/.ideavimrc<CR>
map <leader><leader>r :action Run<CR>
map <leader><leader>d :action Debug<CR>
map <leader>d :action ToggleLineBreakpoint<CR>
map <leader>wq :wq<CR>
map <leader>ww :w<CR>
map <leader>wv :action MoveTabRight<CR>
map <leader>ws :action MoveTabDown<CR>
map <leader>wc :action RestoreDefaultLayout<CR>
map <leader>wn :action MoveEditorToOppositeTabGroup<CR>

nmap grm :action SelectAllOccurrences<CR>i
nmap grn :action SelectNextOccurrence<CR>
nmap grp :action UnselectPreviousOccurrence<CR>
nmap <tab> <c-w><c-w>
